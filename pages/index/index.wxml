<!--头部-->
<view class="header-bar">
    <view class="header-content">
        <text bindtap="navClick" data-index="{{index}}" wx:for="{{nav}}" class="{{ index == nowIndex ? 'cur' : ''}}" wx:key="电影">{{item}}</text>
    </view>
</view>

<!--正在上映电影-->
<view class="{{nowIndex == 0 ? 'show' : 'hide'}}">
  {{nowIndex}}
</view>

<!--即将上映电影-->
<view class="{{nowIndex == 1 ? 'show' : 'hide'}}">
  {{nowIndex}}
</view>

<!--口碑排行电影-->
<view class="{{nowIndex == 2 ? 'show' : 'hide'}}">
  {{nowIndex}}
</view>


<!--index.wxml-->
<view class="container">
  <view class="page-header">
     <!-- <text class="page-header-text">{{title}}</text> -->
  </view>
  <scroll-view class="page-body" scroll-y="true">
      <navigator url="../movie/movie?id={{item.id}}" wx:for="{{movies}}">
        <view class="item">
           <image class="poster" src="{{item.images.small}}"></image>      
        <view class="meta">
           <text class="title">{{item.title}}</text>
           <text class="sub-title">{{item.original_title}}({{item.year}})</text>
           <text class="artists" wx:for="{{item.directors}}">{{item.name}}</text>
        </view>
        <text class="rating">
          {{item.rating.average}}
        </text>
        </view>
     </navigator>
  </scroll-view>
</view>